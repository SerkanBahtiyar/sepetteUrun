@using sepetteYemek.Models.siniflar
@model List<satisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Departman Personel Satis</h2>

<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı Bilgisi >@ViewBag.dp</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Ürün</th>
        <th>Müşteri</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Urun.UrunAd</td>
            <td>@s.Musteriler.musteriAd @s.Musteriler.musteriSoyad</td>
            <td>@s.Fiyat ₺</td>
            <td>@s.Adet</td>
            <td>@s.ToplamTutar ₺</td>
            <td>@s.Tarih</td>
            <td><a href="#" class="btn btn-block" style="background-color:palegoldenrod">Yazdır</a></td>
        </tr>
    }
</table>

