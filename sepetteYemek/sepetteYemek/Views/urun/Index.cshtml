@using sepetteYemek.Models.siniflar
@model  List<urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />

<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı : @Html.TextBox("p")
        <input type="submit" value="ara" />
    </p>

}
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>


            <td>
                @k.UrunAd
            </td>
            <td>@k.Marka</td>
            <td>@k.Stok</td>
            <td>@k.AlisFiyat ₺</td>
            <td>@k.SatisFiyat ₺</td>
            <td>@k.Kategori.KategoriAd</td>

            <td><a href="/urun/UrunSil/@k.Urunid" class="btn btn-danger">Sil</a></td>
            <td><a href="/urun/UrunGetir/@k.Urunid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/urun/SatisYap/@k.Urunid" class="btn btn-default" style="background-color:lightcoral">Satış Yap</a></td>

        </tr>
    }

</table>

<a href="/urun/YeniUrun" class="btn btn-info">Yeni Ürün</a>


